			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"router": {
			"type": "object",
			"required": [],
			"properties": {
				"defaultroute": {
					"type": "string"
				},
				"aliases": {
					"type": "object",
					"required": []
				},
				"secure": {
					"type": "boolean"
				},
				"routes": {
					"type": "object",
					"required": []
				}
			}
		},
		"globalEvents": {
			"type": "object",
			"required": []
		}
